@using System.Web.Mvc.Html
@model GradeTrackerApp.Models.Course.CourseListViewModel

<style>

    table td {
        padding-bottom: 15px;
        padding-left: 10px;
    }

    table td.grade {
        text-align: center
    }

    table th {
        font-size: larger;
        text-align: center;
        width: 20%
    }
</style>


@{
    ViewBag.Title = "Courses";
}

<h2>Courses</h2>
<hr />


@if (Model.Count > 0)
{
    <table>
        
        <tr>
            <th>
                Name
            </th>
            <th>
                Current Grade
            </th>
            <th>
                Final Grade
            </th>
            <th colspan="2">
                Options
            </th>
        </tr>

        @foreach (var course in Model)
        {
        <tr>
            <td>
                @(course.Name)
            </td>
            <td class="grade">
                @(course.CurrentGrade)
            </td>
            <td class="grade">
                @(course.FinalGrade)
            </td>
            <td>
                @Html.ActionLink("View", "ViewCourse", "Course", routeValues: new { courseId = course.Id }, htmlAttributes: null)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditCourse", "Course", routeValues: new { courseId = course.Id }, htmlAttributes: null)
            </td>
            @*<td>
                @Html.ActionLink("Run a What-If", "StartWhatIfGrade", "Course", routeValues: new {courseId = course.Id}, htmlAttributes: null)
            </td>*@
        </tr>
        }
    </table>
}
else
{
    <p>No courses to display...add one below!</p>
}



<div style="padding-top: 15px">
    @Html.ActionLink("Add a New Course", "Add", "Course", routeValues: null, htmlAttributes: new { Class = "btn btn-default" })
</div>
