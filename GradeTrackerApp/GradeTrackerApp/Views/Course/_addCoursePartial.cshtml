@model GradeTrackerApp.Models.Course.CreateCourseViewModel

@using (@Html.BeginForm("Create", "Course", FormMethod.Post))
{
    <table>
        <tr>
            <td>
                @Html.LabelFor(model => model.Name)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Name)
            </td>
            <td>
                @Html.ValidationMessageFor(model => model.Name, string.Empty, new {@class = "text-danger"})
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Number)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Number)
            </td>
            <td>
                @Html.ValidationMessageFor(model => model.Number, string.Empty, new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Department)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Department)
            </td>
            <td>
                @Html.ValidationMessageFor(model => model.Department, string.Empty, new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.SemesterId)
            </td>
            <td>
                @Html.DropDownListFor(m => m.SemesterId, Model.Semesters)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Year)
            </td>
            <td>
                @Html.DropDownListFor(model => model.Year, Model.YearOptions)
            </td>
            <td>
                @Html.ValidationMessageFor(model => model.Year, string.Empty, new { @class = "text-danger" })
            </td>
        </tr>

    </table>

    <div style="padding-top: 15px">
        <input type="submit" value="Add Course" class="btn btn-default" />
        @Html.ActionLink("Cancel", "Index", "Course", routeValues: null, htmlAttributes: new { Class = "btn btn-default" })
    </div>
}